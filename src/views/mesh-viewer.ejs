<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LineaCNC</title>
    <meta name="csrf-token" content="<%= csrfToken %>">
    <link rel="icon" href="/assets/images/logos/favicon.svg" type="image/svg+xml">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/notifications.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .mesh-cell {
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(0, 0, 0, 0.1);
            font-size: 0.7rem;
            cursor: pointer;
            transition: all 0.2s;
            white-space: nowrap;
            position: relative;
            width: 100%;
            height: 100%;
        }
        .mesh-cell:hover {
            border-color: #3b82f6;
            transform: scale(1.05);
            z-index: 10;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        .mesh-cell.editable {
            cursor: text;
        }
        .heatmap-legend {
            display: flex;
            height: 20px;
            border-radius: 4px;
            overflow: hidden;
            margin: 10px 0;
        }
        #meshContainer {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        #importModal {
            transition: opacity 0.2s ease-in-out;
        }
        #importModal.hidden {
            display: none;
        }
    </style>
</head>
<body class="min-h-screen bg-gray-50 dark:bg-gray-900 font-sans transition-colors duration-200">
    <div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
        <%- include('components/navbar', { user: user }) %>
        
        <!-- Contenu principal -->
        <main class="w-full py-6 px-4 sm:px-6 lg:px-8">
            <div class="flex gap-6 h-[calc(100vh-8rem)]">
                <!-- Colonne gauche - Menu et statistiques -->
                <div class="w-80 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 p-6 overflow-y-auto">
                    <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Mesh Viewer</h2>
                    
                    <!-- Bouton d'import depuis fichier -->
                    <button 
                        id="openImportModal"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 mb-3"
                    >
                        <div class="flex items-center justify-center space-x-2">
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                            </svg>
                            <span>Importer depuis fichier</span>
                        </div>
                    </button>
                    
                    <!-- Bouton d'import depuis machine -->
                    <button 
                        id="importFromMachine"
                        class="w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 mb-6"
                    >
                        <div class="flex items-center justify-center space-x-2">
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                            <span>Importer depuis machine</span>
                        </div>
                    </button>
                    
                    <!-- Statistiques -->
                    <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                        <h3 class="text-sm font-semibold text-gray-900 dark:text-gray-100 mb-3">Statistiques</h3>
                        <div class="space-y-2 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">Nombre de valeurs:</span>
                                <span id="statCount" class="font-medium text-gray-900 dark:text-gray-100">0</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">Taille de la grille:</span>
                                <span id="statSize" class="font-medium text-gray-900 dark:text-gray-100">0x0</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">Point le plus haut:</span>
                                <span id="statMax" class="font-medium text-green-600 dark:text-green-400">-</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">Point le plus bas:</span>
                                <span id="statMin" class="font-medium text-red-600 dark:text-red-400">-</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Sélecteur de dégradé -->
                    <div class="mt-6">
                        <h3 class="text-sm font-semibold text-gray-900 dark:text-gray-100 mb-2">Type de dégradé</h3>
                        <select 
                            id="gradientType"
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 text-sm"
                        >
                            <option value="viridis">Viridis</option>
                            <option value="magma">Magma</option>
                            <option value="icefire">IceFire</option>
                            <option value="custom">Personnalisé</option>
                        </select>
                    </div>
                    
                    <!-- Options dégradé personnalisé -->
                    <div id="customGradientOptions" class="mt-4 hidden">
                        <h4 class="text-xs font-medium text-gray-700 dark:text-gray-300 mb-2">Couleurs personnalisées</h4>
                        <div class="space-y-3">
                            <div>
                                <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1">Couleur négative (-)</label>
                                <div class="flex items-center space-x-2">
                                    <input 
                                        type="color" 
                                        id="customColorNegative"
                                        value="#0000ff"
                                        class="w-12 h-8 border border-gray-300 dark:border-gray-600 rounded cursor-pointer"
                                    />
                                    <input 
                                        type="text" 
                                        id="customColorNegativeHex"
                                        value="#0000ff"
                                        class="flex-1 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-xs font-mono bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                    />
                                </div>
                            </div>
                            <div>
                                <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1">Couleur positive (+)</label>
                                <div class="flex items-center space-x-2">
                                    <input 
                                        type="color" 
                                        id="customColorPositive"
                                        value="#ff0000"
                                        class="w-12 h-8 border border-gray-300 dark:border-gray-600 rounded cursor-pointer"
                                    />
                                    <input 
                                        type="text" 
                                        id="customColorPositiveHex"
                                        value="#ff0000"
                                        class="flex-1 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-xs font-mono bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Légende heatmap -->
                    <div class="mt-6">
                        <h3 class="text-sm font-semibold text-gray-900 dark:text-gray-100 mb-2">Légende</h3>
                        <div id="heatmapLegend" class="heatmap-legend"></div>
                        <div class="flex justify-between text-xs text-gray-600 dark:text-gray-400 mt-1">
                            <span id="legendMin">Min</span>
                            <span id="legendMax">Max</span>
                        </div>
                    </div>
                </div>
                
                <!-- Colonne droite - Vues 2D et 3D -->
                <div class="flex-1 flex gap-6">
                    <!-- Vue 2D - Matrice -->
                    <div class="flex-1 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 overflow-hidden flex flex-col">
                        <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-700">
                            <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Vue 2D</h2>
                        </div>
                        <div id="meshContainer" class="flex-1 p-4 flex justify-center items-center">
                            <p class="text-gray-500 dark:text-gray-400">Importez des données pour afficher la matrice</p>
                        </div>
                    </div>
                    
                    <!-- Vue 3D -->
                    <div class="flex-1 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 overflow-hidden flex flex-col">
                        <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
                            <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Vue 3D</h2>
                            <button 
                                id="mesh3DSettingsBtn"
                                class="p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors duration-200"
                                title="Paramètres de la vue 3D"
                            >
                                <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </button>
                        </div>
                        <div id="mesh3DContainer" class="flex-1 relative p-4 bg-gray-100 dark:bg-gray-900">
                            <canvas id="mesh3DCanvas" class="w-full h-full rounded"></canvas>
                            <div class="absolute top-6 left-6 bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded pointer-events-none">
                                Rotation: Souris • Zoom: Molette
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        
        <!-- Modal d'import -->
        <div id="importModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] flex flex-col">
                <!-- En-tête du modal -->
                <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Importer des données mesh</h3>
                    <button 
                        id="closeImportModal"
                        class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors"
                    >
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                
                <!-- Corps du modal -->
                <div class="p-6 overflow-y-auto flex-1">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Collez les données mesh dans le champ ci-dessous
                    </label>
                    <textarea 
                        id="meshImport" 
                        class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 font-mono text-xs"
                        rows="18"
                        placeholder="Collez ici les données au format mesh..."
                    ></textarea>
                    
                    <!-- Informations de détection -->
                    <div id="importInfo" class="mt-4 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800 hidden">
                        <h4 class="text-sm font-semibold text-blue-900 dark:text-blue-100 mb-2">Informations détectées</h4>
                        <div class="space-y-1 text-xs text-blue-800 dark:text-blue-200">
                            <div class="flex justify-between">
                                <span>Taille de la grille:</span>
                                <span id="detectedSize" class="font-medium">-</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Nombre de valeurs:</span>
                                <span id="detectedCount" class="font-medium">-</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Valeurs manquantes:</span>
                                <span id="detectedMissing" class="font-medium">-</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Pied du modal -->
                <div class="flex items-center justify-end space-x-3 p-6 border-t border-gray-200 dark:border-gray-700">
                    <button 
                        id="cancelImport"
                        class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg transition-colors duration-200"
                    >
                        Annuler
                    </button>
                    <button 
                        id="importButton"
                        class="px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors duration-200"
                    >
                        Importer
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal de sélection de machine -->
    <div id="machineSelectModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] flex flex-col">
            <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Importer depuis une machine</h3>
                <button 
                    id="closeMachineSelectModal"
                    class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors"
                >
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <div class="p-6 overflow-y-auto flex-1">
                <!-- Commande de récupération -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Commande de récupération du mesh
                    </label>
                    <input 
                        type="text" 
                        id="meshCommand"
                        value="G29 T"
                        class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 font-mono text-sm"
                        placeholder="G29 T"
                    />
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Commande G-code à envoyer pour récupérer les données mesh</p>
                </div>
                
                <!-- Liste des machines -->
                <div>
                    <h4 class="text-sm font-semibold text-gray-900 dark:text-gray-100 mb-3">Machines disponibles</h4>
                    <div id="machineList" class="space-y-2">
                        <p class="text-gray-500 dark:text-gray-400 text-sm">Chargement des machines...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal paramètres vue 3D -->
    <div id="mesh3DSettingsModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full">
            <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Paramètres vue 3D</h3>
                <button 
                    id="closeMesh3DSettingsModal"
                    class="p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors duration-200"
                >
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <div class="p-6 space-y-6">
                <!-- Lissage du mesh -->
                <div>
                    <label class="block text-sm font-medium text-gray-900 dark:text-gray-100 mb-2">
                        Lissage du mesh
                    </label>
                    <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-600 dark:text-gray-400">Brut</span>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" id="mesh3DSmooth" class="sr-only peer">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
                        </label>
                        <span class="text-sm text-gray-600 dark:text-gray-400">Lisse</span>
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Activez le lissage pour un rendu plus doux</p>
                </div>
                
                <!-- Amplitude Z -->
                <div>
                    <label for="mesh3DZScale" class="block text-sm font-medium text-gray-900 dark:text-gray-100 mb-2">
                        Amplitude Z (hauteur): <span id="mesh3DZScaleValue" class="text-blue-600 dark:text-blue-400">2.0</span>
                    </label>
                    <input 
                        type="range" 
                        id="mesh3DZScale" 
                        min="0.5" 
                        max="10" 
                        step="0.1" 
                        value="2" 
                        class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-gray-700"
                    >
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Ajuste l'amplitude verticale du mesh</p>
                </div>
            </div>
            
            <div class="flex items-center justify-end space-x-3 p-6 border-t border-gray-200 dark:border-gray-700">
                <button 
                    id="applyMesh3DSettings"
                    class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200"
                >
                    Appliquer
                </button>
            </div>
        </div>
    </div>
    
    <script type="importmap">
    {
        "imports": {
            "three": "https://cdn.jsdelivr.net/npm/three@0.160.0/build/three.module.js",
            "three/addons/": "https://cdn.jsdelivr.net/npm/three@0.160.0/examples/jsm/"
        }
    }
    </script>
    <script type="module">
        import * as THREE from 'three';
        import { OrbitControls } from 'three/addons/controls/OrbitControls.js';
        
        // Rendre disponibles globalement pour compatibilité
        window.THREE = THREE;
        window.OrbitControls = OrbitControls;
        // Ne pas essayer d'ajouter OrbitControls à THREE si l'objet n'est pas extensible
        try {
            if (!Object.isFrozen(THREE)) {
                THREE.OrbitControls = OrbitControls;
            }
        } catch (e) {
            // Ignorer si THREE n'est pas extensible
            console.log('THREE n\'est pas extensible, OrbitControls disponible via window.OrbitControls');
        }
        
        console.log('Three.js et OrbitControls chargés via ES Modules');
        window.dispatchEvent(new Event('orbitcontrols-ready'));
    </script>
    <script src="/js/utils/notification.js"></script>
    <script src="/js/components/dropdown-manager.js"></script>
    <script src="/js/components/machine-manager.js"></script>
    <script src="/js/mesh-viewer.js"></script>
</body>
</html>

