    <script src="/js/tools/mesh-viewer/stats.js"></script>
    <script src="/js/tools/mesh-viewer/parsers.js"></script>
    <script src="/js/tools/mesh-viewer/model.js"></script>
    <script src="/js/tools/mesh-viewer/heatmap.js"></script>
