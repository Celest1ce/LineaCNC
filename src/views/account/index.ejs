<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LineaCNC</title>
    <meta name="csrf-token" content="<%= csrfToken %>">
    <link rel="icon" href="/assets/images/logos/favicon.svg" type="image/svg+xml">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/notifications.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50 dark:bg-gray-900 font-sans transition-colors duration-200">
    <div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
        <%- include('components/navbar', { user: user }) %>
        
        <!-- Contenu principal -->
        <main class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                <% if (error) { %>
                    <div class="alert-error mb-6">
                        <div class="flex">
                            <svg class="h-5 w-5 text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                            </svg>
                            <%= error %>
                        </div>
                    </div>
                <% } %>
                
                <div class="space-y-6">
                    <!-- Informations du compte -->
                    <div class="card p-6">
                        <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">Informations du compte</h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
                                <p class="text-sm text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-800 px-3 py-2 rounded border border-gray-200 dark:border-gray-700"><%= user.email %></p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Pseudo</label>
                                <p class="text-sm text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-800 px-3 py-2 rounded border border-gray-200 dark:border-gray-700"><%= user.pseudo %></p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Modification du pseudo -->
                    <div class="card p-6">
                        <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">Modifier le pseudo</h2>
                        <form action="/account/update-pseudo" method="POST" class="space-y-4">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div>
                                <label for="pseudo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    Nouveau pseudo
                                </label>
                                <input 
                                    id="pseudo" 
                                    name="pseudo" 
                                    type="text" 
                                    value="<%= user.pseudo %>"
                                    required 
                                    class="input-field"
                                    placeholder="Votre pseudo"
                                >
                            </div>
                            <div>
                                <button type="submit" class="btn-primary">
                                    Mettre à jour le pseudo
                                </button>
                            </div>
                        </form>
                    </div>
                    
                    <!-- Changement de mot de passe -->
                    <div class="card p-6">
                        <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">Changer le mot de passe</h2>
                        <form action="/account/change-password" method="POST" class="space-y-4">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div>
                                <label for="currentPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    Mot de passe actuel
                                </label>
                                <input 
                                    id="currentPassword" 
                                    name="currentPassword" 
                                    type="password" 
                                    required 
                                    class="input-field"
                                    placeholder="••••••••"
                                >
                            </div>
                            <div>
                                <label for="newPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    Nouveau mot de passe
                                </label>
                                <input 
                                    id="newPassword" 
                                    name="newPassword" 
                                    type="password" 
                                    required 
                                    class="input-field"
                                    placeholder="••••••••"
                                >
                            </div>
                            <div>
                                <label for="confirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    Confirmer le nouveau mot de passe
                                </label>
                                <input 
                                    id="confirmPassword" 
                                    name="confirmPassword" 
                                    type="password" 
                                    required 
                                    class="input-field"
                                    placeholder="••••••••"
                                >
                            </div>
                            <div>
                                <button type="submit" class="btn-primary">
                                    Changer le mot de passe
                                </button>
                            </div>
                        </form>
                    </div>
                    
                    <!-- Retour au dashboard -->
                    <div class="text-center">
                        <a href="/dashboard" class="btn-secondary">
                            Retour au tableau de bord
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="/js/main.js"></script>
    <script src="/js/utils/theme-manager.js"></script>
    <script src="/js/components/dropdown-manager.js"></script>
</body>
</html>
